    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Shop Page</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <style>
            .product-cart-wrap {
                border: 1px solid #eee;
                border-radius: 8px;
                margin-bottom: 20px;
                transition: all 0.3s ease;
                height: 100%;
            }

            .product-cart-wrap:hover {
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                transform: translateY(-3px);
            }

            .product-img-action-wrap {
                position: relative;
                padding: 10px;
                background: #fff;
                border-radius: 8px 8px 0 0;
            }

            .product-img {
                position: relative;
                overflow: hidden;
                border-radius: 4px;
            }

            .product-img img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                transition: all 0.3s ease;
            }

            .product-img:hover img {
                transform: scale(1.05);
            }

            .wishlist-btn {
                position: absolute;
                top: 20px;
                right: 20px;
                background: white;
                border-radius: 50%;
                width: 35px;
                height: 35px;
                display: flex;
                align-items: center;
                justify-content: center;
                box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease;
            }

            .wishlist-btn i {
                color: #ff6b6b;
                font-size: 16px;
            }

            .wishlist-btn:hover {
                transform: scale(1.1);
                background: #ff6b6b;
            }

            .wishlist-btn:hover i {
                color: white;
            }

            .product-content-wrap {
                padding: 15px;
                background: white;
                border-radius: 0 0 8px 8px;
            }

            .product-content-wrap h6 {
                font-size: 16px;
                margin-bottom: 10px;
                color: #253D4E;
                font-weight: 600;
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                /* -webkit-line-clamp: 2; */
                -webkit-box-orient: vertical;
            }

            .product-content-wrap h5 {
                font-size: 18px;
                color: #3BB77E;
                font-weight: 700;
                margin-bottom: 15px;
            }

            .product-content-wrap a {
                display: inline-block;
                padding: 8px 20px;
                background: #3BB77E;
                color: white;
                border-radius: 4px;
                text-decoration: none;
                transition: all 0.3s ease;
                width: 100%;
                text-align: center;
            }

            .product-content-wrap a:hover {
                background: #2a8e5f;
            }

            .shop-header {
                text-align: center;
                padding: 30px 0;
                margin-bottom: 20px;
            }

            .shop-header h1 {
                color: #253D4E;
                font-size: 32px;
                font-weight: 700;
            }

            .no-products {
                text-align: center;
                padding: 50px;
                color: #666;
            }

            .debug-info {
                background: #f8f9fa;
                padding: 15px;
                border-radius: 4px;
                margin-top: 20px;
                font-family: monospace;
            }

            .search-form .form-control {
                height: 30px;
                font-size: 14px;
                padding: 5px;
                border-radius: 25px;
            }

            .search-form .btn {
                height: 30px;
                font-size: 14px;
                padding: 0 10px;
            }

            .search-form .input-group {
                max-width: 300px;
                margin: 0 auto;

            }

            .shop-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 10px;
                margin-right: 120px;
            }

            .header-title {
                margin: 0;
                text-align: right;

            }

            .search-form {
                display: flex;
                justify-content: center;
                margin: 0 auto;
                max-width: 300px;
            }

            .shop-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 10px 20px;
            }

            .header-title {
                margin: 0;
                font-size: 24px;
                color: #333;
                flex-grow: 1;
            }

            .form-container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                gap: 20px;
                width: 100%;
               
            }

            .search-form {
                flex-grow: 2;
                max-width: 400px;
                /* Centered size */
                margin: 0 auto;
            }

            .search-form .form-control {
                height: 35px;
                font-size: 14px;
                padding: 5px 10px;
                border-radius: 25px;
            }

            .search-form .btn {
                height: 35px;
                font-size: 14px;
                padding: 0 15px;
            }

            .sort-dropdown {
                flex-grow: 1;
                max-width: 150px;
                text-align: right;
            }

            .sort-dropdown .form-control {
                border-radius: 8px;
                padding: 5px 10px;
                font-size: 14px;

            }
            .a{
                right: 55px;
                
            }
        </style>
    </head>

    <body>
        <div class="container">
            <header class="shop-header">
                <h1>Our Products</h1>
                <div class="form-container">
                    <form action="/shop" method="GET" class="search-form mb-4">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Search products..."
                                value="<%= searchQuery || '' %>">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                        <div class="sort-dropdown">
                            <select name="sort" class="form-control" onchange="this.form.submit()">
                                <option value="select">Select one</option>
                                <option value="newest" <%=sort==='newest' ? 'selected' : '' %>>New Arrivals</option>
                                <option value="price-low" <%=sort==='price-low' ? 'selected' : '' %>>Price Low to High
                                </option>
                                <option value="price-high" <%=sort==='price-high' ? 'selected' : '' %>>Price High to Low
                                </option>
                                <option value="name-asc" <%=sort==='name-asc' ? 'selected' : '' %>>Name A to Z</option>
                                <option value="name-desc" <%=sort==='name-desc' ? 'selected' : '' %>>Name Z to A</option>
                                <option value="featured" <%=sort==='featured' ? 'selected' : '' %>>Featured</option>
                            </select>
                        </div>
                    </form>
                </div>
            </header>

            <div class="row">
                <!-- Category Filter Sidebar -->
                <div class="col-lg-3 order-lg-1 ">
                    <div class="card category-filter a">
                        <div class="card-header">
                            <h5 class="mb-0">Categories</h5>
                        </div>
                        <div class="card-body ">
                            <form action="/shop" method="GET">
                                <input type="hidden" name="sort" value="<%= sort || 'newest' %>">
                                <input type="hidden" name="search" value="<%= searchQuery || '' %>">
                                
                                <% categories.forEach(function(category) { %>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" 
                                               name="categories" 
                                               value="<%= category._id %>"
                                               id="category-<%= category._id %>"
                                               <%= selectedCategories && selectedCategories.includes(category._id.toString()) ? 'checked' : '' %>>
                                        <label class="form-check-label" for="category-<%= category._id %>">
                                            <%= category.name %> (<%= category.count %>)
                                        </label>
                                    </div>
                                <% }); %>
        
                                <!-- Price Range Filter -->
                                <div class="mt-4">
                                    <h6>Price Range</h6>
                                    <div class="price-range-inputs">
                                        <input type="number" name="minPrice" class="form-control mb-2" 
                                               placeholder="Min Price" value="<%= minPrice || '' %>">
                                        <input type="number" name="maxPrice" class="form-control mb-3" 
                                               placeholder="Max Price" value="<%= maxPrice || '' %>">
                                    </div>
                                </div>
        
                                <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-9 order-lg-2">
                    <main>
                        <div class="row product__filter">
                            <% if(products && products.length> 0) { %>
                                <% products.forEach(function(product) { %>
                                    <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                                        <div class="product-cart-wrap mb-30">
                                            <div class="product-img-action-wrap">
                                                <div class="product-img product-img-zoom">
                                                    <a href="/productDetails?id=<%= product._id %>">
                                                        <img class="default-img" src="<%= product.productImages[0] %>"
                                                            alt="<%= product.name %>">
                                                    </a>
                                                </div>
                                                <a href="/addToWishlist" class="wishlist-btn"
                                                    onclick="event.preventDefault(); addToWishlist('<%= product._id %>')">
                                                    <i class="fas fa-heart"></i>
                                                </a>
                                            </div>
    
                                            <div class="product-content-wrap">
                                                <h6>
                                                    <%= product.name %>
                                                </h6>
                                                <h5>â‚¹<%= product.regularPrice %>
                                                </h5>
                                                <button onclick="addToCart('<%= product._id %>')"
                                                    class="btn btn-sm btn-outline-primary">
                                                    Add to cart
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="col-12">
                                                <p class="text-center">No products available</p>
                                            </div>
                                            <% } %>
                        </div>
    
                        <!-- Pagination Controls -->
                        <% if (totalPages> 1) { %>
                            <div class="pagination justify-content-center mt-4">
                                <nav aria-label="Product navigation">
                                    <ul class="pagination">
                                        <% if (hasPreviousPage) { %>
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="/shop?page=<%= previousPage %>&search=<%= searchQuery || '' %>&sort=<%= sort || 'newest' %>"
                                                    aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                </a>
                                            </li>
                                            <% } %>
    
                                                <% for(let i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link"
                                                            href="/shop?page=<%= i %>&search=<%= searchQuery || '' %>&sort=<%= sort || 'newest' %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
    
                                                        <% if (hasNextPage) { %>
                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                    href="/shop?page=<%= nextPage %>&search=<%= searchQuery || '' %>&sort=<%= sort || 'newest' %>"
                                                                    aria-label="Next">
                                                                    <span aria-hidden="true">&raquo;</span>
                                                                </a>
                                                            </li>
                                                            <% } %>
                                    </ul>
                                </nav>
                            </div>
                            <% } %>
                    </main>
                </div>
            </div>
        </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    </html>

    <script>
        document.querySelectorAll('.form-check-input').forEach(checkbox => {
            checkbox.addEventListener('change', () => {
                document.getElementById('categoryFilterForm').submit();
            });
        });

        function addToCart(productId) {
            fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: productId })
            })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error('Failed to add to cart');
                    }
                })
                .then(data => {
                    console.log('Product added to cart:', data);
                    // Success message with two options
                    Swal.fire({
                        title: 'Added to Cart!',
                        text: 'Would you like to view your cart?',
                        icon: 'success',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#7066e0',
                        confirmButtonText: 'Go to Cart',
                        cancelButtonText: 'Continue Shopping'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/cartPage';
                        }
                    });
                })
                .catch(error => {
                    console.error('Error adding to cart:', error);
                    // Error message
                    Swal.fire({
                        title: 'Oops!',
                        text:  "Please login to add items to your cart",
                        icon: 'error',
                        confirmButtonColor: '#3085d6'
                    });
                });
        }

        function addToWishlist(productId) {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: true,
                // showCancelButton: true,
                confirmButtonText: 'Go To Wishlist',
                // cancelButtonText: 'Continue Shopping',
                confirmButtonColor: '#3085d6',
                // cancelButtonColor: '#7066e0',
                timer: 4000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            fetch('/addToWishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: productId })
            })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error('Failed to add to wishlist')
                    }
                })
                .then(data => {
                    console.log(data, "data")
                    Toast.fire({
                        icon: 'success',
                        title: 'Added to Wishlist!',
                        text: 'Would you like to view your wishlist?'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/wishlist';
                        }
                    });
                })
                .catch(error => {
                    console.log(error, "errorrrr")
                    Toast.fire({
                        icon: 'error',
                        title: 'Oops!',
                        text: 'Could not add the product to the wishlist.'
                    });
                });
        }
    </script>
    </body>

    </html>


